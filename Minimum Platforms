class Solution:    
    def minPlatform(self, arr, dep):
        n = len(arr)
        arr.sort()
        dep.sort()
        i = 0
        j = 0
        platform = 0
        max_platform = 0
        while i < n and j < n:
            if arr[i] <= dep[j]:
                platform += 1
                max_platform = max(max_platform, platform)
                i += 1
            else:
                platform -= 1
                j += 1
        return max_platform
