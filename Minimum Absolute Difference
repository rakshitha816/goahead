class Solution:
    def minimumAbsDifference(self, arr: List[int]) -> List[List[int]]:
        arr.sort()
        minDiff = float('inf')
        n = len(arr)        
        for i in range(n - 1):
            diff = arr[i + 1] - arr[i]
            if diff < minDiff:
                minDiff = diff
        result = []
        for i in range(n - 1):
            if arr[i + 1] - arr[i] == minDiff:
                result.append([arr[i], arr[i + 1]])        
        return result
